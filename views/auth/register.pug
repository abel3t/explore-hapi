extends ../common/index 
block case
    .register.container.mt-3
        h1.title.text-primary.text-center.font-weight-bold Register 
        form(action="/register" method="POST" style="margin: 0 auto").bg-light.p-3.w-50
            .form-group
                input.form-control(type="text" name="name" value= user.name placeholder='Your Name')
            .form-group
                input.form-control(type="text" name="userName" value= user.userName placeholder='User Name')
            .form-group
                input.form-control(type="text" name="email" value= user.email placeholder='Email')
            .form-group
                input.form-control(type="password" name="password" value= user.password placeholder='Password')
            .form-group
                input.form-control(type="password" name="repeat_password" value= user.repeat_password placeholder='Repeat Password')
            if (err)
                .alert.alert-sm.alert-danger= err
            button.btn.btn-primary Register